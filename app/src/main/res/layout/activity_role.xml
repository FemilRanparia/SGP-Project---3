<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#331876"
        tools:context=".Role">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="244dp"
            android:fontFamily="@font/baloo_tamma_2_medium"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/baloo_tamma_2_medium"
            android:text="Please Select Your Journey"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <Button
            android:id="@+id/continue_as_learner"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="#3C5EEF"
            android:fontFamily="@font/baloo_tamma_2_medium"
            android:text="Continue as a Learner"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/continue_as_sharer"
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="#3C5EEF"
            android:fontFamily="@font/baloo_tamma_2_medium"
            android:text="Continue as a Sharer"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/continue_as_learner"
            app:layout_constraintStart_toStartOf="@+id/continue_as_learner"
            app:layout_constraintTop_toBottomOf="@+id/continue_as_learner" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="238dp"
            android:layout_height="176dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/newlogo1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>